#        continue
#    print(f'me voy a comer una {fruta}')



#el else no se ejecuta
for fruta in frutas:
    print(f'me voy a comer una {fruta}')
    if fruta =='pera':
        break
else:
    print("termino")


for letra in cadena:
    print(letra)
#for en una sola linea duplicando numeros
lista_duplicados = [x*2 for x in numeros]
print(lista_duplicados)